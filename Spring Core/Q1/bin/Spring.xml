<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>

<bean id="customer" class="org.Q1.Customer">
<property name="customerId" value="001"></property>
<property name="customerName" value="Abc"></property>
<property name="customerContact" value="0420146966"></property>
<property name="customerAddress" ref="address"></property>
</bean>

<bean id="address" class="org.Q1.Address">
<property name="street" value="6th street"></property>
<property name="city" value="New Delhi"></property>
<property name="state" value="New Delhi"></property>
<property name="zip" value="110001"></property>
<property name="country" value="India"></property>
</bean>

</beans>